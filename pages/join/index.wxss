image {
  width: 100%;
}

input, textarea {
  /* box-sizing: border-box; */
  padding: 12rpx 24rpx;
  color: #555;
  line-height: 1.6; 
  background-color: #fff;
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
  box-shadow: inset 0 2rpx 2rpx rgba(0,0,0,.075);
  font-size: 32rpx;
}

textarea {
  box-sizing: border-box;
  max-width: 100%;
  height: 140rpx;
}