<template lang="wxml">
    <view class="assistant">        
        <navigator  url="/pages/agent/index?agentId={{ agent.agentId }}">
            <image class="img-circle" src="{{ agent.headRoundImgUrl }}?x-oss-process=image/resize,w_70" mode="aspectFill" lazy-load="true"></image>
            <text class="name">{{ agent.agentName }}</text>
            <text class="company">{{ agent.companyName }}</text>
        </navigator>
        <text class="wechat" @tap="addWechat" wx:if="{{ agent.agentWChatId }}">添加微信</text> 
        <text class="tel" @tap="phoning">电话咨询</text>
    </view>
    <!--添加微信的modal框-->
    <modal :visibility.sync="addWechatModalVisibility" title="添加微信">        
        <view slot="body">
            <text>方法一：</text>
            <text>将{{ agent.agentName }}的二维码保存到相册</text>
            <image src="{{ agent.agentWChartQRImgUrl }}" mode="aspectFill" lazy-load="true" class="qrcode"></image>
            <text>方法二：</text>
            <text>复制微信号添加微信号：{{ agent.agentWChatId }}</text>            
        </view>
        <view slot="footer" class="modal-footer">
            <view class="wk-btn wk-btn-transparent" @tap="saveToAlbum" data-src="{{ agent.agentWChartQRImgUrl }}">保存到相册</view>
            <view class="wk-btn wk-btn-transparent" @tap="copyWechat" data-wechatid="{{ agent.agentWChatId }}">复制微信号</view>
        </view>
    </modal>
    <!--tips框-->
    <tips :visibility.sync="tipsVisibility" :msg.sync="tipsMsg"></tips>
</template>

<script>
    import wepy from "wepy" ;
    /*++-----------------------------------------------------------------------------------------------------------------------------------------------------------------------
    加载组件资源
    -----------------------------------------------------------------------------------------------------------------------------------------------------------------------++*/ 
    import Modal from "./modal" ;
    import Tips from "./tips" ;
    /*++-----------------------------------------------------------------------------------------------------------------------------------------------------------------------
    加载工具资源
    -----------------------------------------------------------------------------------------------------------------------------------------------------------------------++*/ 
    import adf from "../mixins/apiDataFilter" ;
    
    export default class Com extends wepy.component {
        props = {
            agent : Object        
        } ;
        components = {
            modal : Modal ,
            tips : Tips
        } ;
        data = {            
            addWechatModalVisibility : false ,  //添加微信modal框的显示状态
            tipsVisibility : false ,  //tips框的显示状态
            tipsMsg : ""
        } ;
        methods = {
            /*++-----------------------------------------------------------------------------------------------------------------------------------------------------------------------
            提示信息
            -----------------------------------------------------------------------------------------------------------------------------------------------------------------------++*/
            tips : (msg) => {
                this.tipsVisibility = true ;
                this.tipsMsg = msg ;
            } ,
            /*++-----------------------------------------------------------------------------------------------------------------------------------------------------------------------
            点击电话咨询调用的方法
            -----------------------------------------------------------------------------------------------------------------------------------------------------------------------++*/
            phoning : ()=> {
                this.tips("打我电话干嘛？") ;
            } ,
            /*++-----------------------------------------------------------------------------------------------------------------------------------------------------------------------
            点击添加微信调用的方法
            -----------------------------------------------------------------------------------------------------------------------------------------------------------------------++*/
            addWechat : ()=> {                
                this.addWechatModalVisibility = true ;                      
            } ,
            /*++-----------------------------------------------------------------------------------------------------------------------------------------------------------------------
            保存到相册调用方法
            -----------------------------------------------------------------------------------------------------------------------------------------------------------------------++*/
            saveToAlbum : function(event) {                
                wx.getSetting({
                    success(res) {
                        if (!res["scope.writePhotosAlbum"]) {
                            wx.authorize({
                                scope : "scope.writePhotosAlbum" ,
                                success() {
                                    wx.downloadFile({
                                        url : event.target.dataset.src ,
                                        success : function(res) {
                                            wx.saveImageToPhotosAlbum({
                                                filePath : res.tempFilePath ,
                                                success(res) {
                                                    //app.showTips('已保存到手机相册!')
                                                } ,
                                                fail(res) {
                                                    //app.showTips('保存到相册失败!')
                                                }
                                            }) ;
                                        } ,
                                        fail : function() {
                                            //app.showTips('保存到相册失败!')
                                        }
                                    }) ;
                                } ,
                                fail(res) {
                                    //app.showTips('保存到相册失败!')
                                }
                            }) ;
                        }
                    }
                }) ;
            } ,
            /*++-----------------------------------------------------------------------------------------------------------------------------------------------------------------------
            复制微信号调用方法
            -----------------------------------------------------------------------------------------------------------------------------------------------------------------------++*/
            copyWechat : (event)=> {
                wx.setClipboardData({
                    data : event.target.dataset.wechatid ,
                    success : (res)=> {                        
                        console.log("复制微信号成功！") ;
                    }
                }) ;
            }
        } ;
        onload() {

        }
    }
</script>

<style lang="less">
    @import "../less/variables.less" ;
    @import "../less/mixins.less" ;
    .assistant {
        background-color : #fff ;
        box-shadow : 0 -2px 6px 0 rgba( 0 , 0 , 0 , .1 ) ;
        bottom : 0 ;
        .flex() ;
        height : 100rpx ;
        left : 0 ; 
        position : fixed ;
        width : 100% ;
        z-index : 9900 ;
        &>navigator {
            .flex(1) ;
            .clearfix() ;
            image {                
                display : block ;
                float : left ;
                height : 70rpx ;
                margin : 15rpx ;
                width : 70rpx ;
            }
            text {
                display : block ;                
                margin-left : 90rpx ;
                line-height : 35rpx ;
                &.name {
                    font-size : @default-font-size ;
                    line-height : 40rpx ;
                    margin-top : 15rpx ;
                }
                &.company {
                    color : @light-font-color ;
                    font-size : @small-font-size ;
                    line-height : 30rpx ;
                }
            }
        }
        &>text {
            color : #fff ;
            display : block ;
            .flex(1) ;
            font-size : @default-font-size ;
            line-height : 100rpx ;
            text-align : center ;
            &.wechat {
                background-color : @danger-color ;
            }
            &.tel {
                background-color : @primary-color ;
            }
        }
    }
    .wk-modal {
        .modal-body {
            text {
                display : block ;
                text-align : center ;
            }            
            .qrcode {
                .center-block() ;
                height : 300rpx ;
                width : 300rpx ;
            }
        }
        .modal-footer {
            .wk-btn {
                color : @blue-font-color ;
                font-size : @large-font-size ;
                line-height : 90rpx ;
            }
        }
    }
</style>